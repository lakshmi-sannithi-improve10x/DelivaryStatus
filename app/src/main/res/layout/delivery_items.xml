<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/carimage_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        tools:srcCompat="@color/white" />

    <TextView
        android:id="@+id/estimate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/carimage_iv"
        android:layout_alignTop="@id/carimage_iv"
        android:background="#FFC107"
        android:text="Text view"
        android:textColor="#232121" />

    <TextView
        android:id="@+id/carname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/carimage_iv"
        android:layout_alignTop="@id/carimage_iv"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp"
        android:text="MARUTI SUZUKI SWIFT VDI 2010"
        android:textColor="#171616"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="Qty:1" />

    <TextView
        android:id="@+id/vin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/carname_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginTop="20dp"
        android:text="VIN:"
        android:textColor="#272626" />

    <TextView
        android:id="@+id/vinno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vin_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:text="Text view," />

    <TextView
        android:id="@+id/regno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vinno_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="90dp"
        android:text="Reg Num:"
        android:textColor="#272626" />

    <TextView
        android:id="@+id/regnum_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/regno_txt"
        android:layout_alignTop="@id/regno_txt"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="60dp"
        android:text="Text view" />

    <TextView
        android:id="@+id/cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="Text view"
        android:textColor="#131313"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="60dp"
        app:srcCompat="@drawable/baseline_currency_rupee_24" />

    <TextView
        android:id="@+id/requested_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vin_txt"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp"
        android:text="Requested:"
        android:textColor="#222020" />

    <TextView
        android:id="@+id/requestedtime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/requested_txt"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="72dp"
        android:text="Text view"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mrp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cost_txt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:text="Text view" />

    <TextView
        android:id="@+id/estimatep_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/requested_txt"
        android:layout_marginTop="20dp"
        android:text="Estimate Prepared:"
        android:textColor="#252323" />

    <TextView
        android:id="@+id/estimatedate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/estimatep_txt"
        android:layout_marginLeft="118dp"
        android:text="Text view"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/discount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mrp_txt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="Text view"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/request_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/estimatep_txt"
        android:layout_marginTop="20dp"
        android:text="Request Number:"
        android:textColor="#1E1C1C" />

    <TextView
        android:id="@+id/requestno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/request_txt"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="112dp"
        android:text="TextView"
        android:textSize="12sp" />

    <Button
        android:id="@+id/viewrequest_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/discount_txt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#03A9F4"
        android:text="View Request" />

</RelativeLayout>